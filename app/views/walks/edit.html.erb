<div class="container main-container">
  <%= image_tag 'logo.png', class:'index-logo' %>
  <div class="form-container">

    <%= simple_form_for([@walk.greenspace, @walk]) do |f| %>
      <div class="mb-3 string optional category-stress">
        <label class="string optional mb-3" for="stress_level_before">How are you feeling now?</label>
        <input class="form-control string optional mb-3" type="range" name="walk[stress_level_after]" min="0" max="10" step="1" name="stress_level_after" id="stress_level_after" oninput="this.nextElementSibling.value = this.value">
        <%# <output>0</output> %>
        <div class="mb-5" style="display: flex; align-items: center; justify-content: space-between;">
          <span style='font-size:30px;'>&#128534;</span>
          <span style='font-size:30px;'>&#128528;</span>
          <span style='font-size:30px;'>&#128512;</span>
        </div>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit class: 'btn btn-primary fs-4' %>
      </div>
    <% end %>
  </div>
</div>
