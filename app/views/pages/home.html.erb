<div class="banner" style="background-image: url(<%= asset_path('home.jpg')%>">
  <div class="banner-content">
    <img class="reset-logo"src="assets/logo.png" alt="">
    <h2><strong>Reset</strong> your mind</h2>
  </div>
  <div class="search_bar">

    <%= form_tag greenspaces_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Enter Postcode"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
