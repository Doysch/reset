<div class="banner" style="background-image: url(<%= asset_path('home.jpg')%>">
  <div class="banner-content">
    <%= image_tag 'logo.png', class:'reset-logo' %>
    <h2><strong>Reset</strong> your mind</h2>
    <h2>Take a walk</h2>
    <h2>Where are you?</h2>
  </div>
  <div class="search_bar">

    <%= form_tag greenspaces_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Enter location"
      %>
      <%= submit_tag "Find Walks", class: "btn btn-search" %>
    <% end %>
  </div>
</div>
