<div class="container main-container">
    <%= image_tag 'logo.png', class:'index-logo' %>
  <div class="cards">
    <% @greenspaces.each do |greenspace| %>
      <%= link_to greenspace_path(greenspace), class: 'greenspace-card-link' do %>
        <div class="card-index">

          <%= cl_image_tag greenspace.photos[0].key %>
          <div class="card-index-infos">
            <h2><%=  greenspace.name %></h2>
            <p>rating:<%= "⭐️" * greenspace.average_rating %></p>
              <div class="card-trip-user avatar-bordered d-flex align-items-center justify-content-center"><p>20m</p>
              </div>
          </div>
          <div class="card-index-rating">
          <p class="align-items-center"><em>"<%= greenspace.description %>"</em></p>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>

  <div class ="mx-auto mt-5" style="width: 90%; height: 200px; border-radius: 4px;"

  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
